install.ln::
	@case '${MFLAGS}' in *[ik]*) set +e;; esac; \
	for i in $(LNINSTALLDIRS) ;\
	do \
	(cd $$i ; echo "linting" for install.ln and install.ln "in $(CURRENT_DIR)/$$i..."; \
	$(MAKE) $(MFLAGS) DESTDIR='$(DESTDIR)' LINTOPTS='$(LINTOPTS)' install.ln); \
	done

